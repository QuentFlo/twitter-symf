<div class="actions" style="margin-top: 3%;">

	<div class="action-btn" style="vertical-align: middle; display:inline-block; vertical-align:middle;">
		<span class="block block-left">
			<button name="foo" style="background: transparent; border: none; color: grey;" class="fa fa-reply" value="upvote" data-toggle="modal" data-target="#myModal">
				{{Tweet["nbrReply"]}}</button>
		</span>
		<iframe name="dummyframe3" id="dummyframe3" style="display: none;"></iframe>
			<div class="modal fade" id="myModal" role="dialog" style="visibility: visible;">
				<div
					class="modal-dialog" style="visibility: visible;">
					<!-- Modal content-->
					<div class="modal-content">
        	<form action="/reply/{{Tweet["id"]}}" target="dummyframe3" method="post">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal">&times;</button>
							<h4 class="modal-title" style="color: black; float: center ; margin-left: 15%" >Add comment</h4>
						</div>
						<input name="content" type="text" style="margin-left: 9%; width: 80%" placeholder="Write comment"></input>
            <input value="{{username}}" name="author" hidden></input>
            <input value="{{userId}}" name="authorId" hidden></input>
					<div class="modal-footer">
						<button type="submit" class="btn btn-default"style="background: dodgerblue; color: white">Send</button>
					</div>
        </form>
        </div>

			</div>
		</div>
	<iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
	<form action="/retweet/{{Tweet["id"]}}" target="dummyframe" class="block block-center" method="post">
		<button name="foo" style="background: transparent; border: none; color: grey;" class="fa fa-retweet" value="upvote" onclick="history.go(0);">
			{{Tweet["nbrRetweet"]}}</button>
	</form>
	<iframe name="dummyframe2" id="dummyframe2" style="display: none;"></iframe>
	<form action="/like/{{Tweet["id"]}}" target="dummyframe2" class="block block-right" method="post">
		<button name="foo" style="background: transparent; border: none; color: grey;" class="fa fa-heart" value="upvote" onclick="history.go(0);">
			{{Tweet["likes"]}}</button>
	</form>
	<br>
</div>
