{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<link rel="stylesheet" href=" {{ './css/home.css' }}">
<link rel="stylesheet" href=" {{ '/css/styles.css' }}">
<style>
  body.linked {

    .button,
    h1 {
      opacity: .3;
      transition: opacity 300ms linear;
    }
  }

  .button.-regular {
    color: #202129;
    background-color: #f2f2f2;

    &:hover {
      color: #202129;
      background-color: #e1e2e2;
      opacity: 1;
    }

    &:active {
      background-color: #d5d6d6;
      opacity: 1;
    }
  }
</style>

<body class="background__dark_theme">

<div class="tweets-container">
  {% include("./includes/header.html.twig") with {oldlocation, title}%}

  <div class="card tweet">

    <div class="author2">
      <img class="avatar"
        src="{{avatar}}" />

      <form action="/post" method="post" class="post__tweet" style="margin-left: 5%;">
        <textarea type="text" name="content" maxlength="244" row="4" class="input__tweet"
          placeholder="What's happening?"></textarea>
        <input name="author" value="{{username}}" hidden></input>
        <input name="authorId" value="{{userId}}" hidden></input>
        <button style="float: right" class='button -blue center' type="submit">tweet</button>
      </form>
      {# <p style="margin-top: 3%; cursor: text;"><strong></strong><span style="border:none" class="input" content=""
          color="grey" role="textbox" font-size="20px" contenteditable>What's happening?</span></p>#}
      {# <p style="margin-top: 3%; cursor: text;"><strong></strong><span style="border:none" class="input" content=""
          color="grey" role="textbox" font-size="20px" contenteditable>What's happening?</span></p>#}
    </div>

  </div>

  <br>
  {% if Tweets["error"] is defined %}
  <p>You are not following any user</p>
  {% else%}
  {% include("./includes/displayTweets.html.twig") with {Tweets, username}%}
  {% endif %}

</div>

</body>


{% endblock %}